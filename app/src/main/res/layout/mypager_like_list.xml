<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/picture_list"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@mipmap/headpictrue"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吹响吧，上低音号！"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#F8DDFF"
                android:layout_marginTop="30dp"></TextView>

            <TextView android:id="@+id/score_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.9分！"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#F8DDFF"
                android:layout_marginTop="20dp"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>