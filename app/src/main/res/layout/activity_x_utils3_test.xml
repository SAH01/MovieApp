<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tools.xUtils3TestActivity"
    android:orientation="vertical">

    <Button android:id="@+id/test_download"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="下载测试"></Button>

    <ProgressBar android:id="@+id/test_progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:scaleY="2"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="80"
        style="?android:attr/progressBarStyleHorizontal"></ProgressBar>

    <Button android:id="@+id/test_upload"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="上传测试"></Button>

    <TextView
        android:id="@+id/test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据测试">
    </TextView>

</LinearLayout>